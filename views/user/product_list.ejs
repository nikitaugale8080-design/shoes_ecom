<%- include("navbar.ejs") %>
<br><br>
 <section class="container my-5" id="trending-shoes">
    <h2 class="section-title fw-bold">
      <i class="fas fa-fire text-danger me-2"></i> Trending Shoes
    </h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4" id="shoes_product_list">
      <!-- Product Card 1 -->
      <% for(var i=0;i<products.length;i++){ %>
      <div class="col animate-delay-<%-i%>">
        <div class="card product-card h-100">
          <img src="/products/<%-products[i].product_main_image%>" class="card-img-top" alt="Classic White Sneakers">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold"><%-products[i].product_name%></h5>
            <p class="card-text text-muted mb-2"><%-products[i].product_description.slice(0,20)%></p>
            <div class="mt-auto">
              <span class="price fw-bold">&#8377;<%-products[i].product_price%></span>
              <a href="#" class="btn btn-outline-dark btn-sm float-end">
                <i class="fas fa-cart-plus"></i> Add to Cart
              </a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      
      
      <!-- More products can be dynamically added here -->
    </div>
  </section>


<br><br>

<%- include("footer.ejs") %>
