<%- include("navbar.ejs") %>

  <!-- Hero Carousel -->
  <div id="heroCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner rounded-4 shadow-lg">
      <!-- Slide 1 -->
       <% for(var i=0;i<sliders.length;i++) { %>
      <div class="carousel-item <%- (i==0) ? 'active':''%> ">
        <img src="/sliders/<%-sliders[i].slider_image%>" class="d-block w-100" alt="New Collection">
        <div class="carousel-caption d-none d-md-block text-start">
          <h2 class="fw-bold mb-2"><%-sliders[i].slider_title%></h2>
          <p class="mb-3"><%-sliders[i].slider_description%></p>
          <a target="_blank" href="<%-sliders[i].slider_button_link%>" class="btn btn-primary px-4 py-2"><%-sliders[i].slider_button_text%></a>
        </div>
      </div>
      <% } %>
     
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Trending Shoes Section -->
 
  <section class="container my-5" id="trending-shoes">
    <h2 class="section-title fw-bold">
      <i class="fas fa-fire text-danger me-2"></i> Trending Shoes
    </h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4" id="shoes_product_list">
      <!-- Product Card 1 -->
      <% for(var i=0;i<trending_products.length;i++){ %>
      <div class="col animate-delay-<%-i%>">
        <a href="/product_details/<%-trending_products[i].product_id%>">
        <div class="card product-card h-100">
          <img src="/products/<%-trending_products[i].product_main_image%>" class="card-img-top" alt="Classic White Sneakers">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold"><%-trending_products[i].product_name%></h5>
            </a>
            <p class="card-text text-muted mb-2"><%-trending_products[i].product_description.slice(0,20)%></p>
            <div class="mt-auto">
              <span class="price fw-bold">&#8377;<%-trending_products[i].product_price%></span>
              <a href="#" class="btn btn-outline-dark btn-sm float-end">
                <i class="fas fa-cart-plus"></i> Add to Cart
              </a>
            </div>
          </div>
        </div>
        
      </div>
      <% } %>
      
      
      <!-- More products can be dynamically added here -->
    </div>
  </section>
  
  <!-- Promotional Banner Section -->
  <section class="container my-5">
    <div class="row align-items-center promo-banner rounded shadow-sm p-4">
      <div class="col-md-6 mb-3 mb-md-0">
        <img src="https://images.unsplash.com/photo-1513104890138-7c749659a591?auto=format&fit=crop&w=600&q=80" alt="Promotional Banner" class="img-fluid rounded">
      </div>
      <div class="col-md-6 text-center text-md-start">
        <h2 class="fw-bold mb-3">Step Into Summer Savings!</h2>
        <p class="mb-4 text-muted">Upgrade your footwear with our latest collection. Enjoy exclusive discounts on selected styles for a limited time only.</p>
        <a href="/sale" class="btn btn-dark btn-lg px-4">Shop Now</a>
      </div>
    </div>
  </section>

  <!-- Shop by Sports Types Section -->
  <section class="container my-5">
    <h2 class="section-title fw-bold">Shop by Sports</h2>
    <div class="row row-cols-2 row-cols-md-4 g-4 justify-content-center">
      <!-- Sport Type Card 1 -->
       <% for(var i=0; i<product_types.length;i++) { %>
      <div class="col">
        <a href="#" class="text-decoration-none">
          <div class="card style-card h-100 text-center">
            <img src="/types/<%- product_types[i].product_type_image%>" alt="Soccer" class="card-img-top">
            <div class="card-body">
              <h6 class="card-title fw-semibold mb-0"><%-product_types[i].product_type_name%></h6>
            </div>
          </div>
        </a>
      </div>
      <% } %>
      
      <!-- More sport types can be added here -->
    </div>
  </section>

  <!-- Shop by Style Section -->
  <section class="container my-5">
    <h2 class="section-title fw-bold">Shop by Style</h2>
    <div class="row row-cols-2 row-cols-md-4 g-4 justify-content-center">
      <!-- Style Card 1 -->
       <% for(var i=0;i<product_styles.length;i++) { %>
      <div class="col">
        <a href="#" class="text-decoration-none">
          <div class="card style-card h-100 text-center">
            <img src="/styles/<%-product_styles[i].product_style_image%>" alt="Casual" class="card-img-top">
            <div class="card-body">
              <h6 class="card-title fw-semibold mb-0"><%-product_styles[i].product_style_name%></h6>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    
      <!-- More style types can be added here -->
    </div>
  </section>

  <!-- High Discount Products Section -->
  <section class="container my-5">
    <h2 class="section-title fw-bold text-danger">High Discount Products</h2>
    <div class="row row-cols-1 row-cols-md-4 g-4 justify-content-center" id="high-discount-product-list">
      <!-- High Discount Product 1 -->
       <% for(var i=0;i<high_discount_products.length;i++) { %>
      <div class="col">
        <div class="card product-card h-100 text-center position-relative">
          <span class="discount-badge bg-danger text-white"><%- high_discount_products[i].apply_discount_percent%>% OFF</span>
          <img src="/products/<%- high_discount_products[i].product_main_image%>" alt="Product 1" class="card-img-top" style="height: 160px;">
          <div class="card-body">
            <h6 class="card-title fw-semibold mb-1"><%- high_discount_products[i].product_name%></h6>
            <p class="mb-1 text-muted"><del>₹<%- high_discount_products[i].product_market_price %></del> <span class="fw-bold text-success">₹<%- high_discount_products[i].product_price%></span></p>
            <a href="#" class="btn btn-outline-dark btn-sm w-100">View Product</a>
          </div>
        </div>
      </div>
      <% } %>
      
      <!-- More high discount products can be added here -->
    </div>
  </section>

  <%- include("footer.ejs") %>